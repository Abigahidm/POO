class Doctor:
    def __init__(self, nombre, especialidad, experiencia):
        self.nombre = nombre
        self.especialidad = especialidad
        self.experiencia = experiencia

    def mostrar_informacion(self):
        print(f"Dr. {self.nombre} )| Especialidad: {self.especialidad} | Experiencia: {self.experiencia} a√±os")

    def atender_pacientes(self):
        print(f"Dr. {self.nombre} est√° atendiendo pacientes en {self.especialidad}.")

    def calcular_salario(self):
        salario_base = 3000
        bono = self.experiencia * 150  # bono por a√±o de experiencia
        salario_total = salario_base + bono
        print(f"Salario estimado de Dr. {self.nombre}: ${salario_total}")

    def recetar_medicina(self):
        print(f"Dr. {self.nombre} ha recetado medicina al paciente. üíä")

# Crear doctores
doctor1 = Doctor("Ram√≠rez", "Cardiolog√≠a", 10)
doctor2 = Doctor("Lozano", "Neurolog√≠a", 5)

# Acciones
doctor1.mostrar_informacion()
doctor1.atender_pacientes()
doctor1.calcular_salario()
doctor1.recetar_medicina()

print()  # espacio

doctor2.mostrar_informacion()
doctor2.atender_pacientes()
doctor2.calcular_salario()
doctor2.recetar_medicina()
